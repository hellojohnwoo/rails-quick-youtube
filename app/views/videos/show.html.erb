<%= video_tag @video.file.url, controls: true, class: "w-100" if @video.file? %>
<h4>
  <%= @video.title %>
</h4>

writer: <%= @video.user.email %>
<%= simple_format @video.description %>

views: <%= @video.view_count_was %>

<br />
<% if current_user && (@video.user == current_user) %>
  <%= link_to 'Edit', edit_video_path(@video), class: "btn btn-danger" %> |
  <%= link_to 'Delete', @video, method: :delete, data: {confirm: "Are you sure you want to delete it?"}, class: "btn btn-outlined-danger" %> |
<% end %>
<br />
<br />

<div id="comments">
  <%= render "videos/comments" %>
</div>